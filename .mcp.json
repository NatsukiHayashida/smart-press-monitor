{
  "mcpServers": {
    "serena": {
      "command": "python",
      "args": ["-m", "mcp.server.stdio"],
      "env": {
        "MCP_SERENA_PROJECT_PATH": "."
      }
    },
    "context7": {
      "command": "npx",
      "args": ["context7-mcp@latest"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@executeautomation/playwright-mcp-server@latest"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    }
  }
}